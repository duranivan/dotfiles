{
  /*
	// Place your snippets for Markdown here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	"Print to console": {
		"prefix": "log",
		"body": [
			"console.log('$1');",
			"$2"
		],
		"description": "Log output to console"
	}
*/
  "Python insert": {
    "prefix": "py",
    "body": ["```python", "${1:Code here...}", "```"],
    "description": "Insert Python code in MarkDown"
	},
  "Javascript insert": {
    "prefix": "js",
    "body": ["```js", "${1:Code here...}", "```"],
    "description": "Insert Javascript code in MarkDown"
	},
  "Code block insert": {
    "prefix": "cb",
    "body": ["```${1:html}", "${2:Code here...}", "```"],
    "description": "Insert a code block in MarkDown"
	},
  "CSS insert": {
    "prefix": "css",
    "body": ["```css", "${1:Code here...}", "```"],
    "description": "Insert CSS code in MarkDown"
	},
  "SQL insert": {
    "prefix": "sql",
    "body": ["```sql", "${1:Code here...}", "```"],
    "description": "Insert SQL code in MarkDown"
	},
	"R insert": {
		"prefix": "R",
		"body": [
			"```R",
			"${1:Code here...}",
			"```"
		],
		"description": "Insert R code in MarkDown"
	},
  "Bold Surround": {
    "prefix": "bold",
    "body": ["**${1:${TM_SELECTED_TEXT}}**$0"],
    "description": "Surround with bold"
  },
  "Center-resize image": {
    "prefix": "img",
    "body": [
			"<div style=\"text-align:center\">",
			"\t<img src=\"${1:image}.png\" style=\"width:${2:330}px;\" />",
			"</div>"
		],
    "description": "Center and resize image"
  },
  "Evernote meta tag": {
    "prefix": "evn",
    "body": [
      "---",
      "title: $1",
      "tags: $2-${3:HTML_CSS}",
      "notebook: ${2:Notes-Coding}",
      "---"
		],
    "description": "Evernote meta tag to create/publish Md file to Evernote"
  }
}
